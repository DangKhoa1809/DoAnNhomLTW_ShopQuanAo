@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Content/CSS_Admin.css" />
</head>

<body>
    <div class="d-flex">
        <!-- SIDEBAR -->
        <div class="sidebar">
            <div class="text-center mb-4 logo">
                <img src="~/Images/Logo/logoShopQuanAo.jpg" class="img-fluid" width="150" />
            </div>

            <ul class="nav flex-column gap-2">
                <!-- TRANG CHỦ WEB -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("TrangChu", "SanPham")">
                        <i class="bi bi-house-door-fill"></i>
                        <span>Trang Chủ Web</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Admin/TrangChuAdmin"><i class="bi bi-grid-fill"></i><span>Trang Chủ Admin</span></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("SanPhamAdmin", "Admin")">
                        <i class="bi bi-bag-fill"></i><span>Sản Phẩm</span>
                    </a>
                </li>


                <li class="nav-item">
                    <a class="nav-link" href="/Admin/DonHang"><i class="bi bi-box-seam"></i><span>Đơn Hàng</span></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Admin/KhachHang"><i class="bi bi-people-fill"></i><span>Khách Hàng</span></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Admin/ThongKe"><i class="bi bi-bar-chart-line-fill"></i><span>Thống Kê</span></a>
                </li>
            </ul>

            <div class="mt-auto pt-4">
                <a class="nav-link" href="@Url.Action("DangXuat", "TaiKhoan")">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Đăng Xuất</span>
                </a>
            </div>
        </div>

        <!-- MAIN CONTENT -->
        <div class="flex-grow-1">
            @RenderBody()
        </div>
    </div>
</body>
</html>
