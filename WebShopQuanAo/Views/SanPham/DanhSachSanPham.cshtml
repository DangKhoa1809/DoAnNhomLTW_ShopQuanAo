@model IEnumerable<WebShopQuanAo.Models.SanPham>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container my-5">
    <!-- Banner -->
    @if (ViewBag.Banner != null)
    {
        <div class="mb-4">
            <img src="@ViewBag.Banner" class="w-100 rounded" style="object-fit: cover;" />
        </div>
    }

    <!-- Bộ lọc + danh sách sản phẩm -->
    <div class="d-flex justify-content-end mb-3">
        <div class="d-flex align-items-center me-3">
            <label for="sortOption" class="fw-bold">Bộ lọc:</label>
        </div>

        <select id="sortOption" class="form-select form-select-sm w-auto border-2 border-dark rounded-3" onchange="window.location.href = '@Url.Action("DanhSachSanPham", "SanPham", new { slug = ViewBag.Slug })?sort=' + this.value">
            <option value="default" disabled selected>Sắp xếp theo</option>
            <option value="price_asc" @(Request["sort"] == "price_asc" ? "selected" : "")>Giá: Tăng dần</option>
            <option value="price_desc" @(Request["sort"] == "price_desc" ? "selected" : "")>Giá: Giảm dần</option>
            <option value="name_asc" @(Request["sort"] == "name_asc" ? "selected" : "")>Tên: A - Z</option>
            <option value="name_desc" @(Request["sort"] == "name_desc" ? "selected" : "")>Tên: Z - A</option>
            <option value="newest" @(Request["sort"] == "newest" ? "selected" : "")>Mới nhất</option>
            <option value="oldest" @(Request["sort"] == "oldest" ? "selected" : "")>Cũ nhất</option>
            <option value="best_selling" @(Request["sort"] == "best_selling" ? "selected" : "")>Bán chạy nhất</option>
        </select>
    </div>

    <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 g-4">
        @foreach (var sp in Model)
        {
            var anhHover = sp.HinhAnhSanPhams?.FirstOrDefault(h => h.ThuTuHinh == 2)?.TenHinh;

            <div class="col">
                <div class="card shadow-sm border-0 product-card h-100">
                    <a href="@Url.Action("ChiTietSanPham", "SanPham", new { id = sp.MaSP })" class="text-decoration-none text-dark">
                        <div class="ratio ratio-1x1 product-image-wrapper">
                            <img src="@Url.Content("~/Images/Products/" + sp.HinhDaiDien)" class="img-main" />
                            <img src="@Url.Content(anhHover != null ? "~/Images/Products/" + anhHover : "~/Images/Products/" + sp.HinhDaiDien)" class="img-hover" />
                        </div>
                    </a>

                    <div class="card-body text-start d-flex flex-column">
                        <a href="@Url.Action("ChiTietSanPham", "SanPham", new { id = sp.MaSP })" class="text-dark text-decoration-none">
                            <h6 class="product-name">@sp.TenSP</h6>
                        </a>

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <p class="fw-bold m-0" style="color: red; font-size: 15px">@String.Format("{0:N0}₫", sp.Gia)</p>

                            <a href="@Url.Action("ChiTietSanPham", "SanPham", new { id = sp.MaSP })" class="text-dark">
                                <i class="bi bi-cart-plus fs-5 cart-icon"></i>
                            </a>
                        </div>

                        <a href="@Url.Action("ChiTietSanPham", "SanPham", new { id = sp.MaSP })" class="btn btn-outline-dark btn-sm fw-bold mt-auto btn-view rounded-3"> XEM CHI TIẾT</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Button XEM THÊM -->
    @if (ViewBag.HienXemThem == true)
    {
        <div class="text-center mt-4">
            <a class="btn btn-load-more fw-bold px-4 rounded-3" href="@Url.Action("DanhSachSanPham", new { slug = ViewBag.Slug, sort = Request["sort"], take = ViewBag.SoLuongHienTai + 14 })">XEM THÊM <i class="bi bi-chevron-double-right"></i></a>
        </div>
    }
</div>
